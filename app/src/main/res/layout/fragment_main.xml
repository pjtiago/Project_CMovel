<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.estg.joaoviana.project_cmovel.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bar"/>
    <TextView
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:alpha="0.3"
        android:background="@color/colorPrimary"/>
    <ImageView
        android:id="@+id/tIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/cloudy"
        />
    <TextView
    android:id="@+id/temperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/tIcon"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="10dp"
    android:textStyle="bold"
    android:textSize="20dp"
    android:textColor="@color/red"
    />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/red"
       />
    <Button
    android:id="@+id/btn_favorite"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_below="@+id/country"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="50dp"
    android:background="@drawable/star_favorite" />

    <TextView
        android:id="@+id/textFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/country"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/btn_favorite"
        android:textStyle="bold"
        android:textSize="10dp"
        android:textColor="@color/red"
        />

    <Button
        android:id="@+id/update"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/country"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/update_button" />

    <LinearLayout
        android:id="@+id/layout_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        >
        <TextView
            android:id="@+id/signal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/red"
            android:text="No Signal"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/red"
            />

    </LinearLayout>




</RelativeLayout>
